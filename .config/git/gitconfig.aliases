[alias]
  s = status
  newbranch = "checkout -b"
  commit-amend = "commit --amend --no-edit"
  prune-branches = "!git branch --merged | grep -v \"master\" | grep -v \"main\" | grep -v \"$(git branch --show-current)\" >/tmp/merged-branches && vim /tmp/merged-branches && xargs git branch -d </tmp/merged-branches && git fetch --prune"
  ch = "!git checkout $(git branch -a --format=\"%(refname:short)\" --sort=\"-authordate\" | fzf | sed 's|origin/||g')"
  add-ignore-whitespace = "!git diff --ignore-all-space | git apply --cached"

; vi: ft=gitconfig
